<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuKuis"
    android:orientation="vertical"
    android:background="@drawable/bg_blue">



 <ScrollView
     android:layout_weight="1"
     android:layout_width="wrap_content"
     android:layout_gravity="center"
     android:layout_height="wrap_content">

     <LinearLayout
         android:orientation="vertical"

         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

         <TextView
             android:layout_marginTop="15dp"
             android:layout_gravity="center"
             android:layout_width="330dp"
             android:layout_height="150dp"
             android:gravity="center"
             android:paddingStart="30dp"
             android:paddingEnd="30dp"
             android:textSize="35dp"
             android:text="yang manakah gambar dfault"
             android:id="@+id/soal"
             android:background="@drawable/bg_btn"
             android:layout_marginBottom="20dp"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_gravity="center"
             android:layout_height="wrap_content">
             <Button
                 android:layout_width="160dp"
                 android:layout_height="160dp"
                 android:textSize="60dp"
                 android:textAllCaps="false"
                 android:id="@+id/btnA"
                 android:background="@drawable/item_red"/>
             <Button
                 android:textSize="60dp"
                 android:textAllCaps="false"
                 android:layout_width="160dp"
                 android:layout_height="160dp"
                 android:id="@+id/btnB"
                 android:layout_marginLeft="10dp"
                 android:background="@drawable/item_green"
                 />

         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="10dp"
             android:layout_width="wrap_content"
             android:layout_gravity="center"
             android:layout_height="wrap_content">
             <Button
                 android:textSize="60dp"
                 android:textAllCaps="false"
                 android:layout_width="160dp"
                 android:layout_height="160dp"
                 android:id="@+id/btnC"
                 android:background="@drawable/item_yellow"/>
             <Button
                 android:textSize="60dp"
                 android:textAllCaps="false"
                 android:layout_width="160dp"
                 android:layout_height="160dp"
                 android:id="@+id/btnD"
                 android:layout_marginLeft="10dp"
                 android:background="@drawable/item_blue"/>

         </LinearLayout>

         <Button
             android:layout_marginTop="10dp"
             android:id="@+id/next"
             android:layout_width="90dp"
             android:layout_marginRight="@android:dimen/app_icon_size"
             android:layout_gravity="end"
             android:layout_height="90dp"
             android:padding="@android:dimen/app_icon_size"
             android:background="@drawable/back"
             />


     </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/banner_container_menu_kuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:orientation="horizontal" />

</LinearLayout>